        $(document).ready(function () {
            $("#addLinks").hide();
            $("#addLinkImage").click(function () {
                $("#addLinkImage").hide();
                $("#addLinks").show();
            });
            $("#addLinks").mouseleave(function () {
                $("#addLinkImage").show();
                $("#addLinks").hide();
            });
        });
