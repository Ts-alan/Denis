            <th> Паспорт_выдан_с</th>
            <th> Паспорт_выдан_по</th>
        </tr>
        @foreach (var i in Model)
        {
            foreach (var side in i.Sides)
            {
                SurfaceCOunt += side.Surfaces.Count;
            }
            <tr >
                <td>@i.Owner.Name</td>
                <td>@i.TypeOfAdvertisingStructure.Name</td>
                <td>@i.UniqueNumber</td>
                <td>@i.Status.NameStatus</td>
                <td>@i.Locality.NameLocality</td>
                <td>@i.Street1</td>
                <td>@i.House1</td>
                <td>@i.Street2</td>
                <td>@i.FromStreet</td>
                <td>@i.TheElementOfTheRoadNetwork.TheElementOfTheRoadNetworkName</td>
                <td>@i.Sides.Count</td>
                <td>@SurfaceCOunt</td>
                <td>@i.C_ContractFinancialManagement</td>
                <td>@i.C_PassportAdvertising</td>
                <td>@i.StartDate.Value.ToString().Substring(0, 10)</td>
                <td>@i.EndDate.Value.ToString().Substring(0, 10)</td>
            



            </tr>
        }

    </table>
