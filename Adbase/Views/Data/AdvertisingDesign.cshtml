<script type="text/javascript">
    $(document).ready(function() {

        //создание таблицы
        tableToGrid("#table", {
            height: 700,
            colNames: [
                "Собственник", "Вид", "Уникальный <br/> номер", "Статус",
                "Нас. пункт", "Улица 1", "Дом", "Улица 2", "Со стороны улицы",
                "Элемент улично-дорожной сети", "Количество сторон",
