    {
        <tr>
            <td>@i.Id_show</td>
            <td>@i.Owner.Name</td>
            <td>@i.Height</td>
            <td>@i.Breadth</td>
            <td>@i.Status</td>
            <td>@i.UniqueNumber</td>
            <td>@i.Locality</td>
            <td>@i.Street1</td>
            <td>@i.TheElementOfTheRoadNetwork</td>
            <td>@i.House1</td>
