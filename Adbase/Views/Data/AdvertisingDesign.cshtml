    <table id="table" class="table-bordered" cellpadding="5">
        <tr >
            <th>Собственник</th>
            <th>Вид</th>
            <th>Уникальный_номер</th>
            <th>Статус</th>
            <th>Нас._пункт </th>
            <th>Улица1</th>
            <th>Дом</th>
            <th>Улица2</th>
            <th>Со_стороны_улицы </th>
            <th>Элемент_улично-дорожной_сети</th>
            <th> Количество_сторон</th>
            <th> Количестов_поверхностей</th>
            <th>№_договора_с_финансовым_управлением</th>
