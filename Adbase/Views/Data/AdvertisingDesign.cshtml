            <td>@i.FromStreet</td>
            <td>@i.C_ContractFinancialManagement</td>
            <td>@i.C_PassportAdvertising</td>
            <td>@i.PlannedInstallationDate</td>
            <td>@i.DateOfTakenPassport</td>
            <td>@i.DateOfActualInstallation</td>
            <td>@i.DateDismantling</td>
            <td>@i.RevisionDate</td>
    
        </tr>
    }
</table>
