    //Функция для редактирования поверхностей прямо из таблицы
    function editSurface(surfaceId, obj)
    {

        //если выбран пункт "свободна"
        if ($(obj).find(":selected")[0].value == 0)
        {

            $.ajax('@Url.Action("AddSurface", "Data")', { async: true, data: { side: obj.dataset.side } })
            .success(function (data)
            {
                $("#EditSurfaceModalBody").html(data);
            }).error(function (e)
            {
                alert("ошибка запроса");
            });
        }
        //если выбран пункт "занята"
        else
        {
            $.ajax('@Url.Action("GetSurface", "BackEndServices")', { async: true, data: { surfaceId: surfaceId } })
            .success(function (data)
            {
                $("#EditSurfaceModalBody").html(data);
            }).error(function (e)
            {
                alert("ошибка запроса");
            });
        }
        //Добавление параметров поверхности, которые не обрабатываются байндером
        $("#form0").attr("action", "/BackEndServices/EditSurface?" + "sideid=" + obj.dataset.sideid + "side=" + obj.dataset.side);
        $('#EditSurfaceModal').modal('show');
    };

