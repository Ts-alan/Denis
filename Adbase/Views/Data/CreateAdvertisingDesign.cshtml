            for (var j = 0; j < CountSizes; j++) {
                $("#InsertPhoto").before(
                    "<div code class=\"form-horizontal\">"+
                         "<div class=\"form-group\">"+
                             "<label class=\"control-label col-md-2\" style=\"padding-right: 0\" >Фотография стороны "+ ++j + "</label>" +
                              "<div class=\"col-md-10\">"+
