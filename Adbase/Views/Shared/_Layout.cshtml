<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=0.1">
    <title>@ViewBag.Title</title>
    @*@Styles.Render("~/Content/jqCrid")*@

    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquery-ui")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/messi")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Content/Compatibility")
    
    <script src="http://api-maps.yandex.ru/2.0-stable/?load=package.standard&lang=ru-RU" type="text/javascript"></script>

</head>
<body>
<script type="text/javascript">
    //выделение в меню вкладки где ты находишься
    $(document).ready(function() {
        switch ('@HttpContext.Current.Request.Url.AbsolutePath') {
        case '/Data/AdvertisingDesign':
            $('[href="/Data/AdvertisingDesign"]').css('font-size', '18px');
            $('.navbar-brand').css('font-size', '14px');
            break;
        case '/Map':
            $('[href="/Map"]').css('font-size', '18px');
            $('.navbar-brand').css('font-size', '14px');
            break;
        case '/Account/AdministrationPage':
            $('[href="/Account/AdministrationPage"]').css('font-size', '18px');
            $('.navbar-brand').css('font-size', '14px');
            break;
        default:


        }
    });
</script>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
        <div class="navbar-header" style="margin-right: 10px">
            <img src="/Images/ONCLOUD logo site.png"/>
        </div>

        <div class="navbar-header">

            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

            <a class="navbar-brand" href="/">Главная страница <br/> AdBase</a>
        </div>
        <div class="navbar-collapse collapse">
            @if (ViewBag.MappingContent ?? true)
            {
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Action("AdvertisingDesign", "Data")">Таблица конструкций</a></li>
                    <li><a href="@Url.Action("Index", "Map",new { id = (int?)null })">Карта конструкций</a></li>
                    <li><a href="#">Отчёты</a></li>
                    <li><a href="@Url.Action("AdministrationPage", "Account")">Администрирование</a></li>
                </ul>
            }
            @{ Html.RenderPartial("_LoginPartial"); }
        </div>
    </div>
</div>
<div class="body-content" style="margin-top: 40px">
    @RenderBody()
</div>

@RenderSection("scripts", required: false)
</body>
</html>
